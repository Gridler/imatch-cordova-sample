<?xml version='1.0' encoding='utf-8'?>
<widget id="com.gridler.imatch" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>iMatch</name>
    <description>
        A sample Apache Cordova application for the Gridler iMatch.
    </description>
    <author email="developer@gridler.com" href="https://imatch.gridler.com/">
        Gridler
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-imatch" spec="^1.0.2" />
    <plugin name="cordova-plugin-jj2000" spec="^1.0.1" />
    <plugin name="cordova-plugin-file" spec="^6.0.1" />
</widget>
